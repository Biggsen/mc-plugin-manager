{
  "name": "mc-plugin-manager",
  "version": "1.0.0",
  "description": "Exploration Server Config Tool for Minecraft Plugin Configuration Management",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prebuild:electron": "node scripts/copy-templates.js",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && electron .",
    "electron:build": "npm run build:electron && vite build && node scripts/package-electron.js"
  },
  "keywords": [
    "minecraft",
    "plugin",
    "config",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@mantine/core": "^8.3.14",
    "@mantine/hooks": "^8.3.14",
    "@tabler/icons-react": "^3.36.1",
    "fs-extra": "^11.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "build": {
    "appId": "com.mc-plugin-manager",
    "productName": "MC Plugin Manager",
    "win": {
      "target": [
        "dir"
      ],
      "icon": "build/icon.ico",
      "sign": null,
      "signDlls": false
    },
    "icon": "build/icon.png",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
